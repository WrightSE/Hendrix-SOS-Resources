@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <h1>General Information</h1>
            <div class="form-floating">
                <input asp-for="Input.HendrixID" class="form-control" />
                <label asp-for="Input.HendrixID" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.FName" class="form-control" />
                <label asp-for="Input.FName" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LName" class="form-control" />
                <label asp-for="Input.LName" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" />
                <label asp-for="Input.Email" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control"  />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PrefName" class="form-control"/>
                <label asp-for="Input.PrefName" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Pronouns" class="form-control"/>
                <label asp-for="Input.Pronouns" class="form-label"></label>
            </div>
            <h1>Campus Information</h1>
            <div class="form-floating">
                <input asp-for="Input.Class" class="form-control"/>
                <label asp-for="Input.Class" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.CampusAdd" class="form-control" />
                <label asp-for="Input.CampusAdd" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.CampusEmail" class="form-control" />
                <label asp-for="Input.CampusEmail" class="form-label"></label>
            </div>
            <h1>Emergency Contact Information</h1>
            <div class="form-floating">
                <input asp-for="Input.EmergFName" class="form-control" />
                <label asp-for="Input.EmergFName" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.EmergLName" class="form-control" />
                <label asp-for="Input.EmergLName" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.EmergEmail" class="form-control" />
                <label asp-for="Input.EmergEmail" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.EmergPhone" class="form-control" />
                <label asp-for="Input.EmergPhone" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.EmergRelation" class="form-control" />
                <label asp-for="Input.EmergRelation" class="form-label"></label>
            </div>
            <h1>Financial Information</h1>
            <div class="form-floating">
                <input asp-for="Input.Employer" class="form-control" />
                <label asp-for="Input.Employer" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.EmployerPhone" class="form-control" />
                <label asp-for="Input.EmployerPhone" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.JobPosition" class="form-control" />
                <label asp-for="Input.JobPosition" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PayType" class="form-control" />
                <label asp-for="Input.PayType" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PayFreq" class="form-control" />
                <label asp-for="Input.PayFreq" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.MonthlyWages" class="form-control" />
                <label asp-for="Input.MonthlyWages" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ReferredBy" class="form-control" />
                <label asp-for="Input.ReferredBy" class="form-label"></label>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model SOS_Resources.Pages.Textbooks.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Textbook</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Textbook.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Textbook.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Textbook.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Textbook.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Textbook.Edition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Textbook.Edition)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Textbook.Copies)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Textbook.Copies.Count)
        </dd>
        <dt class="col-sm-2">
            Available
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Textbook.Copies.Where(c => c.CheckedOut.Equals(false)).ToList().Count)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Textbook?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

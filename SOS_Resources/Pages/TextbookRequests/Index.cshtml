@page
@model SOS_Resources.Pages.TextbookRequests.IndexModel

@{
    ViewData["Title"] = "Textbook Requests";
}

<h1>Textbook Requests</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TextbookRequest[0].RequestDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextbookRequest[0].Requester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextbookRequest[0].Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TextbookRequest) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RequestDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Requester.SOS_User.DisplayFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@page
@model SOSResources.Pages.Textbooks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Textbook</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Textbook.ID" />
            <div class="form-group">
                <label asp-for="Textbook.Title" class="control-label"></label>
                <input asp-for="Textbook.Title" class="form-control" />
                <span asp-validation-for="Textbook.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Textbook.Author" class="control-label"></label>
                <input asp-for="Textbook.Author" class="form-control" />
                <span asp-validation-for="Textbook.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Textbook.Edition" class="control-label"></label>
                <input asp-for="Textbook.Edition" class="form-control" />
                <span asp-validation-for="Textbook.Edition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="copies" class="control-label">Add Copies</label>
                <input name="copies" type="number" step="1" value="@Model.Copies" max="10" min="0"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

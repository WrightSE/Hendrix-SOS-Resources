@page
@model SOSResources.Pages.Textbooks.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Textbook</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Textbook.Title" class="control-label"></label>
                <input asp-for="Textbook.Title" class="form-control" />
                <span asp-validation-for="Textbook.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Textbook.Author" class="control-label"></label>
                <input asp-for="Textbook.Author" class="form-control" />
                <span asp-validation-for="Textbook.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Textbook.Edition" class="control-label"></label>
                <input asp-for="Textbook.Edition" class="form-control" />
                <span asp-validation-for="Textbook.Edition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="copies" class="control-label">Copies</label>
                <input name="copies" type="number" step="1" value="@Model.Copies" max="10" min="1"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

